<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:bal="http://wixtoolset.org/schemas/v4/wxs/bal">
  <Bundle Name="XpressFormula Setup"
          Manufacturer="Digixoil"
          Version="$(var.ProductVersion)"
          UpgradeCode="{5D1D71E5-6FCA-4F7B-AEF2-D6E53A95A7C1}"
          IconSourceFile="$(var.AppIconPath)">
    <BootstrapperApplication>
      <bal:WixStandardBootstrapperApplication Theme="standard" />
    </BootstrapperApplication>

    <Chain>
      <MsiPackage SourceFile="$(var.MsiPath)"
                  DisplayInternalUI="yes"
                  Visible="yes"
                  Permanent="no" />
    </Chain>
  </Bundle>
</Wix>
